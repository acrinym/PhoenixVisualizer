<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PhoenixVisualizer.Views.PreviewModalWindow"
        Title="Preview" Width="1024" Height="640"
        SystemDecorations="None"
        TransparencyLevelHint="AcrylicBlur,Blur,Transparent"
        CanResize="True">
  <Grid>
    <!-- Content host -->
    <Canvas x:Name="PreviewHost"/>

    <!-- Resize grips -->
    <Grid>
      <Rectangle Classes="Grip" HorizontalAlignment="Left"   VerticalAlignment="Stretch" Width="6" Cursor="SizeWestEast"/>
      <Rectangle Classes="Grip" HorizontalAlignment="Right"  VerticalAlignment="Stretch" Width="6" Cursor="SizeWestEast"/>
      <Rectangle Classes="Grip" HorizontalAlignment="Stretch" VerticalAlignment="Top"    Height="6" Cursor="SizeNorthSouth"/>
      <Rectangle Classes="Grip" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="6" Cursor="SizeNorthSouth"/>
      <Rectangle Classes="Grip" HorizontalAlignment="Left" VerticalAlignment="Top" Width="8" Height="8" Cursor="TopLeftCorner"/>
      <Rectangle Classes="Grip" HorizontalAlignment="Right" VerticalAlignment="Top" Width="8" Height="8" Cursor="TopRightCorner"/>
      <Rectangle Classes="Grip" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="8" Height="8" Cursor="BottomLeftCorner"/>
      <Rectangle Classes="Grip" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="8" Height="8" Cursor="BottomRightCorner"/>
    </Grid>

    <!-- Close/Redock button -->
    <Button Content="Close" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Click="OnClose"/>
  </Grid>
</Window>