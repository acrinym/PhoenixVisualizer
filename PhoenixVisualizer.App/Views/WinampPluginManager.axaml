<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PhoenixVisualizer.App.ViewModels"
        x:Class="PhoenixVisualizer.Views.WinampPluginManager"
        Title="Winamp Plugin Manager"
        Width="600" Height="500"
        Icon="avares://PhoenixVisualizer/Assets/icon.ico">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🎵 Winamp Visualization Plugins" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Select a plugin to use for visualization" 
                       FontSize="14" Opacity="0.7" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Plugin List -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Plugin List -->
            <ListBox x:Name="PluginList" Grid.Column="0" Margin="0,0,10,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="🎨" FontSize="20" Margin="0,0,10,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding}" FontWeight="Bold"/>
                                <TextBlock Text="Winamp Plugin" Opacity="0.7" FontSize="12"/>
                                <TextBlock Text="Ready to load" Opacity="0.5" FontSize="11"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="▶️" FontSize="16" Opacity="0.5"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <!-- Plugin Actions -->
            <StackPanel Grid.Column="1" Width="120" Spacing="10">
                <Button x:Name="RefreshButton" Content="🔄 Refresh" Click="OnRefreshClick"/>
                <Button x:Name="SelectButton" Content="✅ Select Plugin" Click="OnSelectPluginClick"/>
                <Button x:Name="ConfigureButton" Content="⚙️ Configure" Click="OnConfigureClick"/>
                <Button x:Name="TestButton" Content="🧪 Test Plugin" Click="OnTestClick"/>
            </StackPanel>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="10" CornerRadius="5">
            <TextBlock x:Name="StatusText" Text="Ready to load Winamp plugins" 
                       HorizontalAlignment="Center" FontSize="12"/>
        </Border>
    </Grid>
</Window>
