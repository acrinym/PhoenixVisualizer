<!-- PhoenixVisualizer/PhoenixVisualizer.App/Views/MainWindow.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:r="using:PhoenixVisualizer.App.Rendering"
        xmlns:controls="using:PhoenixVisualizer.App.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="PhoenixVisualizer.Views.MainWindow"
        Title="PhoenixVisualizer - Advanced Audio Visualization"
        Width="1200" Height="800"
        Icon="/Assets/avalonia-logo.ico"
        Background="{DynamicResource MaterialBackground}">



    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Top toolbar with Material Design -->
        <StackPanel Orientation="Horizontal" Margin="12" Spacing="8" Background="{DynamicResource MaterialSurface}">
            <Button x:Name="BtnOpen" Content="Open" Margin="4" 
                    Background="{DynamicResource MaterialPrimary}" 
                    Foreground="White"
                    CornerRadius="4"/>
            <Button x:Name="BtnPlay" Content="Play" Margin="4" 
                    Background="{DynamicResource MaterialPrimary}" 
                    Foreground="White"
                    CornerRadius="4"/>
            <Button x:Name="BtnPause" Content="Pause" Margin="4" 
                    Background="{DynamicResource MaterialPrimary}" 
                    Foreground="White"
                    CornerRadius="4"/>
            <Button x:Name="BtnStop" Content="Stop" Margin="4" 
                    Background="{DynamicResource MaterialPrimary}" 
                    Foreground="White"
                    CornerRadius="4"/>
            <!-- New controls -->
            <Button x:Name="BtnTempoPitch" Content="Tempo/Pitch" Margin="4" 
                    Background="{DynamicResource MaterialAccent}" 
                    Foreground="Black"
                    CornerRadius="4"/>
            <Button x:Name="BtnSettings" Content="Settings" Margin="4" 
                    Background="{DynamicResource MaterialPrimary}" 
                    Foreground="White"
                    CornerRadius="4"/>
            <Button x:Name="BtnPhxEditor" Content="PHX Editor" Margin="4" 
                    Background="{DynamicResource PhoenixPrimary}" 
                    Foreground="White" 
                    ToolTip.Tip="Open Phoenix Plugin Editor"
                    CornerRadius="4"/>
            <ComboBox x:Name="CmbPlugin" Width="160" Margin="4" 
                      Background="{DynamicResource MaterialSurface}"
                      Foreground="{DynamicResource MaterialTextPrimary}"
                      CornerRadius="4"/>
            <ComboBox x:Name="CmbVlcVisualizer" Width="140" Margin="4" 
                      Background="{DynamicResource MaterialSurface}"
                      Foreground="{DynamicResource MaterialTextPrimary}"
                      CornerRadius="4"
                      ToolTip.Tip="Select VLC built-in visualizer"/>
            <Button x:Name="BtnPluginSwitcher" Content="ðŸ”„ Built-in Mode" Margin="4" 
                    Background="{DynamicResource MaterialAccent}" 
                    Foreground="Black"
                    ToolTip.Tip="Switch between built-in visualizers"
                    CornerRadius="4"/>
        </StackPanel>

        <!-- Status row with Material Design -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="12" Spacing="16" 
                    Background="{DynamicResource MaterialElevation1}">
            <TextBlock x:Name="LblFps" Foreground="{DynamicResource MaterialTextPrimary}" 
                       FontWeight="Medium" Margin="8,4"/>
            <TextBlock x:Name="LblBpm" Foreground="{DynamicResource MaterialTextPrimary}" 
                       FontWeight="Medium" Margin="8,4"/>
            <TextBlock x:Name="LblTime" Foreground="{DynamicResource MaterialTextPrimary}" 
                       FontWeight="Medium" Margin="8,4"/>
        </StackPanel>

        <!-- Render surface with Material Design -->
        <Border Grid.Row="2" Margin="12" Background="{DynamicResource MaterialBackground}" 
                CornerRadius="8" BorderBrush="{DynamicResource MaterialElevation2}" 
                BorderThickness="1">
            <Grid>
                <!-- Built-in visualizer surface (Skia) -->
                <r:RenderSurface x:Name="RenderHost" />
                
                <!-- Native Winamp/AVS host (HWND). Start collapsed so built-ins are visible by default. -->
                <controls:AvsHostControl x:Name="AvsWin32Host"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      IsHitTestVisible="False" />
                
                <!-- Optional AVS canvas overlay -->
                <Grid x:Name="AvsCanvasHost" Background="Transparent">
                    <Canvas x:Name="AvsCanvas" Background="Transparent"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>

</Window>