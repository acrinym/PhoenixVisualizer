        xmlns:controls="clr-namespace:PhoenixVisualizer.App.Controls"
        x:Class="PhoenixVisualizer.App.Views.ParameterEditorWindow"
        Width="380" Height="560"
        CanResize="True"
        Title="Parameter Editor">
