<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PhoenixVisualizer.App.Views.PhxEditorSettingsDialog"
        x:DataType="viewmodels:PhxEditorSettings"
        xmlns:viewmodels="clr-namespace:PhoenixVisualizer.App.ViewModels"
        Title="Phoenix Visualizer Settings"
        Width="450" Height="550"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialBackground}">
  <StackPanel Margin="24" Spacing="16" Background="{DynamicResource MaterialSurface}">
    <TextBlock Text="Rendering" FontWeight="Bold" Margin="0,0,0,8" 
               Foreground="{DynamicResource MaterialTextPrimary}" FontSize="16"/>
    <CheckBox Content="Clear every frame" IsChecked="{Binding ClearEveryFrame}" 
               Foreground="{DynamicResource MaterialTextPrimary}"/>
    <CheckBox Content="Pixel doubling" IsChecked="{Binding PixelDoubling}" 
               Foreground="{DynamicResource MaterialTextPrimary}"/>
    <CheckBox Content="VSync" IsChecked="{Binding VSync}" 
               Foreground="{DynamicResource MaterialTextPrimary}"/>
    <CheckBox Content="Show FPS" IsChecked="{Binding ShowFps}" 
               Foreground="{DynamicResource MaterialTextPrimary}"/>
    <CheckBox Content="Show overlay" IsChecked="{Binding ShowOverlay}" 
               Foreground="{DynamicResource MaterialTextPrimary}"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBlock VerticalAlignment="Center" Text="Overlay scale" 
                 Foreground="{DynamicResource MaterialTextPrimary}"/>
      <Slider Width="100" Minimum="0.75" Maximum="2.0" Value="{Binding OverlayScale}"/>
      <TextBlock VerticalAlignment="Center" Text="{Binding OverlayScale}" 
                 Foreground="{DynamicResource MaterialTextPrimary}"/>
    </StackPanel>
    <CheckBox Content="Linear color space" IsChecked="{Binding LinearColor}" 
               Foreground="{DynamicResource MaterialTextPrimary}"/>
    <Separator Background="{DynamicResource MaterialElevation2}"/>
    <TextBlock Text="Theme" FontWeight="Bold" Margin="0,0,0,8" 
               Foreground="{DynamicResource MaterialTextPrimary}" FontSize="16"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBlock VerticalAlignment="Center" Text="Application Theme" 
                 Foreground="{DynamicResource MaterialTextPrimary}"/>
      <ComboBox Width="150" SelectedItem="{Binding ThemeName}" 
                Background="{DynamicResource MaterialSurface}"
                Foreground="{DynamicResource MaterialTextPrimary}">
        <ComboBoxItem>Dark</ComboBoxItem>
        <ComboBoxItem>Light</ComboBoxItem>
        <ComboBoxItem>Neon</ComboBoxItem>
        <ComboBoxItem>Minimal</ComboBoxItem>
        <ComboBoxItem>Material</ComboBoxItem>
        <ComboBoxItem>Amanda</ComboBoxItem>
      </ComboBox>
    </StackPanel>
    <Separator Background="{DynamicResource MaterialElevation2}"/>
    <TextBlock Text="Other" FontWeight="Bold" Margin="0,0,0,8" 
               Foreground="{DynamicResource MaterialTextPrimary}" FontSize="16"/>
    <TextBlock Text="Set as desktop wallpaper (Windows) â€” TODO" FontStyle="Italic" Opacity="0.7" 
               Foreground="{DynamicResource MaterialTextSecondary}"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,16,0,0">
      <Button Content="Apply" Click="OnApply" 
               Background="{DynamicResource MaterialPrimary}" 
               Foreground="White" CornerRadius="4" Margin="4"/>
      <Button Content="OK" IsDefault="True" Click="OnOK" 
               Background="{DynamicResource MaterialPrimary}" 
               Foreground="White" CornerRadius="4" Margin="4"/>
      <Button Content="Cancel" Click="OnClose" 
               Background="{DynamicResource MaterialSurface}" 
               Foreground="{DynamicResource MaterialTextPrimary}" 
               CornerRadius="4" Margin="4"/>
    </StackPanel>
  </StackPanel>
</Window>
