<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:PhoenixVisualizer.App.ViewModels"
        x:Class="PhoenixVisualizer.Views.PhxEditorSettingsDialog"
        x:DataType="local:PhxEditorSettings"
        Title="Preview Settings" Width="420" Height="360"
        WindowStartupLocation="CenterOwner" CanResize="False">
  <StackPanel Margin="16" Spacing="10">
    <TextBlock Text="Preview Rendering" FontWeight="Bold" Margin="0,0,0,6"/>
    <CheckBox Content="Clear every frame" IsChecked="{Binding ClearEveryFrame}"/>
    <CheckBox Content="Pixel doubling (nearest upscale)" IsChecked="{Binding PixelDoubling}"/>
    <CheckBox Content="VSync (cap to monitor refresh)" IsChecked="{Binding VSync}"/>
    <CheckBox Content="Show FPS overlay" IsChecked="{Binding ShowFps}"/>
    <CheckBox Content="Show performance/watch overlay" IsChecked="{Binding ShowOverlay}"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBlock VerticalAlignment="Center" Text="Overlay scale"/>
      <Slider Width="160" Minimum="0.75" Maximum="2.0" Value="{Binding OverlayScale}"/>
      <TextBlock Text="{Binding OverlayScale, StringFormat='{}{0:0.00}x'}" VerticalAlignment="Center"/>
    </StackPanel>
    <Separator/>
    <TextBlock Text="Color/Space" FontWeight="Bold" Margin="0,0,0,6"/>
    <CheckBox Content="Linear color blending" IsChecked="{Binding LinearColor}"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBlock VerticalAlignment="Center" Text="Background"/>
      <TextBox Width="120" Text="{Binding BackgroundColorHex}" Watermark="#000000"/>
      <TextBlock VerticalAlignment="Center" Text="(Hex color)" Opacity="0.7"/>
    </StackPanel>
    <Separator/>
    <TextBlock Text="Theme" FontWeight="Bold" Margin="0,0,0,6"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBlock VerticalAlignment="Center" Text="Application Theme"/>
      <ComboBox Width="150" SelectedItem="{Binding ThemeName}">
        <ComboBoxItem>Dark</ComboBoxItem>
        <ComboBoxItem>Light</ComboBoxItem>
        <ComboBoxItem>Neon</ComboBoxItem>
        <ComboBoxItem>Minimal</ComboBoxItem>
      </ComboBox>
    </StackPanel>
    <Separator/>
    <TextBlock Text="Other" FontWeight="Bold" Margin="0,0,0,6"/>
    <TextBlock Text="Set as desktop wallpaper (Windows) â€” TODO" FontStyle="Italic" Opacity="0.7"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,8,0,0">
      <Button Content="Apply" Click="OnApply"/>
      <Button Content="OK" IsDefault="True" Click="OnOK"/>
      <Button Content="Cancel" Click="OnClose"/>
    </StackPanel>
  </StackPanel>
</Window>
