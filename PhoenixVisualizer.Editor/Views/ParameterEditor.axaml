          <Button Name="ApplyBtn" Content="Apply" />
          <Button Name="RevertBtn" Content="Revert" />
          <TextBox Name="SearchBox" Watermark="Filter parametersâ€¦" Width="220"/>
        </StackPanel>
      </DockPanel>
      <StackPanel x:Name="Root" Margin="6" Spacing="8"/>
    </StackPanel>
  </ScrollViewer>
</UserControl>
